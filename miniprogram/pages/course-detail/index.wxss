/* miniprogram/pages/course-detail/index.wxss */
@import "../../style/common.wxss";

page {
  background: #fafafa;
  display: flex;
  flex-direction: column;
}

.course-detail-img {
  height: 270rpx;
  width: 270rpx;
  margin: 20rpx auto 0rpx auto;
  border-radius: 10rpx;
}

.course-detail {
  margin: 20rpx 20rpx 0rpx 20rpx;
  width: 670rpx;
  border-radius: 10rpx;
  background: #fff;
  padding: 20rpx;
}

.course-detail-title-box {
  display: flex;
  flex: row;
  align-items: center;
}

.course-detail-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  width: 600rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.divider {
  margin-top: 10rpx;
  background: #f5f5f5 100%;
  height: 2rpx;
  width: 100%;
}

.course-detail-info {
  font-size: 28rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}

.course-detail-teacher-desc {
  margin-left: 20rpx;
}

.course-detail-desc {
  font-size: 28rpx;
  color: #535353;
}

.source {
  display: flex;
  flex: row;
  width: 100%;
  line-height: 40rpx;
}

.copy-link-button {
  position: fixed;
  z-index: 2;
  bottom: 20rpx;
  background: #e64340 100%;
  width: 710rpx;
  height: 90rpx;
  border-radius: 20rpx;
  margin: 0rpx 20rpx 0rpx 20rpx;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
